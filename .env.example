# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/cv_ats_optimizer

# JWT secret — REQUIS : le serveur refuse de démarrer sans cette variable.
# Générer avec : node -e "require('crypto').randomBytes(48).toString('hex')"
JWT_SECRET=remplacer-par-une-chaine-aleatoire-de-96-caracteres-hex

# OpenAI API key
OPENAI_API_KEY=sk-...

# Server port
PORT=3001

# Environment
NODE_ENV=development

# Frontend URL (for CORS in production)
FRONTEND_URL=http://localhost:3000
